.col-sm-12
  = link_to  'Accept',  review_registration_user_path(@user, :status => "Accept"), method: :post, remote: false, id: 'accept_leave',
              class: "btn btn-block btn-success col-sm-3 me-3 #{@user.registration_status == 0 ? 'disabled' : ''}",
              data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>&nbsp;Approving..." }

  = link_to  'Reject', review_registration_user_path(@user, :status => "Reject"), method: :post, remote: true, id: 'reject_leave',
              class: "btn btn-block btn-danger col-sm-3 me-3 #{@user.registration_status == 0 ? 'disabled' : ''}",
              data: { disable_with: "<i class='fa fa-spinner fa-spin'></i>&nbsp;Rejecting..." }
