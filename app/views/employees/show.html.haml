-if flash[:warning].present?
  .alert.alert-success
    = flash[:warning]
%h1
  %b= @user.name

.row
  .col-md-8
    .content-show-item
      %h3
        %b Basic Information
        .content-info
          .row
            .item-email
              .col-md-4
                %h5
                  Email
              .col-md-8
                %h5
                  = @user.email
          .row
            .item-mobile
              .col-md-4
                %h5
                  Mobile
              .col-md-8
                %h5
                  %a{:href =>"Tel:#{@user.mobile_number}"}= @user.mobile_number
          .row
            .item-university
              .col-md-4
                %h5 University
              .col-md-8
                %h5
                  = @user.last_university
          .row
            .item-last_degree
              .col-md-4
                %h5
                  Last Degree
              .col-md-8
                %h5
                  = @user.last_degree
          .row
            .item-passing_year
              .col-md-4
                %h5
                  Passing Year
              .col-md-8
                %h5
                  = @user.passing_year
          .row
            .item-blood_group
              .col-md-4
                %h5
                  Blood Group
              .col-md-8
                %h5
                  = @user.blood_group

          .clearfix
      - if current_user.has_admin_privilege?
        %h3
          %b Detail Information
          .content-info
            - if @user.alternate_contact.present?
              .row
                .item-alternate_contact
                  .col-md-4
                    %h5
                      Alternate Contact
                  .col-md-8
                    %h5
                      %a{:href =>"Tel:#{@user.alternate_contact}"}= @user.alternate_contact
            .row
              .item-personal_email
                .col-md-4
                  %h5
                    Personal Mail
                .col-md-8
                  %h5
                    = @user.personal_email
            .row
              .item-emergency_contact_person_name
                .col-md-4
                  %h5
                    Emergency Contact
                .col-md-8
                  %h5
                    = @user.emergency_contact_person_name
            .row
              .item-emergency_contact_person_relation
                .col-md-4
                  %h5
                    Relation
                .col-md-8
                  %h5
                    = @user.emergency_contact_person_relation
            .row
              .item-emergency_contact_person_number
                .col-md-4
                  %h5
                    Mobile
                .col-md-8
                  %h5
                    %a{:href =>"Tel:#{@user.emergency_contact_person_number}"}= @user.emergency_contact_person_number
            .row
              .item-present_address
                .col-md-4
                  %h5 Present Address
                .col-md-8
                  %h5
                    = @user.present_address
            .row
              .item-permanent_address
                .col-md-4
                  %h5
                    Permanent Address
                .col-md-8
                  %h5
                    = @user.permanent_address
            .row
              .item-date_of_birth
                .col-md-4
                  %h5 Date of Birth
                .col-md-8
                  %h5
                    = @user.date_of_birth

            .row
              .item-passing_year
                .col-md-4
                  %h5
                    Joining Date
                .col-md-8
                  %h5
                    = @user.joining_date
          %h3
            %b Document
            .content-info
              .row
                .item-bank_account_no
                  .col-md-4
                    %h5
                      Bank Account No
                  .col-md-8
                    %h5
                      - if @user.bank_account_no.present?
                        = @user.bank_account_no
                      - else
                        N/A
              .row
                .item-ndaDoc
                  .col-md-4
                    %h5
                      NDA
                  .col-md-8
                    %h5
                      - if @ndaDoc.present?
                        = link_to 'View', @ndaDoc.url, {class: 'link', target: :_blank}
                      - else
                        N/A
              .row
                .item-cv
                  .col-md-4
                    %h5
                      CV
                  .col-md-8
                    %h5
                      - if @user.resume.present?
                        = link_to 'View', @user.resume.url, {class: 'link', target: :_blank}
                      - else
                        N/A
              .row
                .item-national_id
                  .col-md-4
                    %h5
                      National ID/ Birth Certificate
                  .col-md-8
                    %h5
                      - if @user.national_id.present?
                        = link_to 'View', @user.national_id.url, {class: 'link', target: :_blank}
                      - else
                        N/A
              .row
                .item-passport
                  .col-md-4
                    %h5
                      Passport
                  .col-md-8
                    %h5
                      - if @user.passport.present?
                        = link_to 'View', @user.passport.url, {class: 'link', target: :_blank}
                      - else
                        N/A
            .clearfix
  .col-md-4
    .img-responsive.profile_image
      = image_tag @user.avatar.url(:large)

- if @pre_registration.present? && current_user.has_admin_privilege?
  %p
    %button.btn.btn-primary{"aria-controls" => "collapseExample", "aria-expanded" => "false", "data-target" => "#addEmployee", "data-toggle" => "collapse", :type => "button"}
      Update NDA
  #addEmployee.collapse
    = form_for @pre_registration, url: update_nda_employees_path, method: :post do |f|
      = hidden_field_tag 'id', @pre_registration.user_id
      %fieldset
        .col-sm-12
          = f.file_field :ndaDoc, onchange: 'validateFiles(this);', data: { max_file_size: 50.megabytes },  class: 'form-control', required: true
      %br
      .form-group
        = f.submit 'Submit', class: 'btn btn-success'

- if @show_actions_to_admin
  .container_accept_or_reject
    .row
      = render partial: 'actions'
