.card.mb-3
  .card-header
    %h5.card-title
      = @user.name + "'s"
      Leave Balance
      - if current_user.has_edit_permission_for? @user
        %span.float-end
          %button.btn.btn-primary{"data-bs-target" => "#sp-award-modal", "data-bs-toggle" => "modal", :type => "button", "data-turbolinks" => false} Award special leave
          %button.btn.btn-primary{"data-bs-target" => "#myModal", "data-bs-toggle" => "modal", :type => "button", "data-turbolinks" => false} Award leave
  %table.table.table-bordered.table-hover
    %thead
      %tr
        %th Leave type
        %th Casual (hours)
        %th Medical (hours)
    %tbody
      %tr
        %th Yearly leave
        %td= LeaveTracker::YEARLY_CASUAL_LEAVE
        %td= LeaveTracker::YEARLY_MEDICAL_LEAVE
      %tr
        %th Accrued in this year
        %td= @user.leave_tracker.accrued_vacation_this_year
        %td= @user.leave_tracker.accrued_medical_this_year
      %tr
        %th Carried forwarded leave
        %td= @user.leave_tracker.carried_forward_vacation
        %td= @user.leave_tracker.carried_forward_medical
      %tr
        %th Accrued in total
        %td= @user.leave_tracker.accrued_vacation_total
        %td= @user.leave_tracker.accrued_medical_total
      %tr
        %th Awarded Leaves
        %td= @user.leave_tracker.awarded_leave
        %td= 'N/A'
      %tr
        %th Consumed leave
        %td= @user.leave_tracker.consumed_vacation
        %td= @user.leave_tracker.consumed_medical
      %tr
        %th Accrual balance
        %td= @user.leave_tracker.accrued_vacation_balance
        %td= @user.leave_tracker.accrued_medical_balance
      %tr
        %th Note
        %td{colspan: 2}= @user.leave_tracker.note

.card.mb-3
  .card-header
    %h5.card-title Leave History
    
  .card-body
    = form_tag leave_tracker_path(@user), method: :get, class: 'row g-3' do
      .col-auto
        = select_tag :year, options_for_select(Time.current.year.downto(2017).to_a, params[:year]), class: 'form-select', prompt: 'All years'
      .col-auto
        = button_tag 'Submit', class: 'btn btn-success'
  - unless @leaves.empty?
    %table.table.table-bordered#leave-table
      %thead
        %tr
          %th{:width => '15%'} Start Date
          %th{:width => '15%'} End Date
          %th{:width => '10%'} Type
          %th{:width => '25%'} Description
          %th{:width => '15%'} Status
          %th{:width => '5%'} Hours
          %th{:width => '22%'} Action
      %tbody
        - @leaves.each do |leave|
          %tr
            %td= leave.start_date
            %td= leave.end_date.present? ? leave.end_date : 'N/A'
            %td= type_of(leave)
            %td= leave.reason
            %td= get_status(leave.status)
            %td= leave.total_leave_hour
            %td
              - unless unannounced?(leave)
                = link_to 'show', leave_path(leave)
              - if leave.start_date >= Time.now or leave.is_awarded?
                |
                = link_to 'Cancel', leave_path(leave), method: :delete, data: { confirm: 'Are you sure' }
  - else
    .alert.alert-info{:role => 'alert'}
      %strong Empty!
      No record found.

/ Modal
- if current_user.has_edit_permission_for? @user
  .modal.fade#myModal{"data-bs-backdrop" => "static", "data-bs-keyboard" => "false", "tabindex" => "-1", "aria-labelledby" => "staticBackdropLabel", "aria-hidden" => "true"}
    .modal-dialog
      .modal-content
        .modal-header
          %h1.modal-title.fs-5#staticBackdropLabel Award leave
          %button.btn-close{:type => "button", "data-bs-dismiss" => "modal", "aria-label" => "Close"}
        .modal-body
          = form_for @leave, :url => {:controller => 'leaves', :action => 'award'},  method: 'POST', html: { class: 'form-horizontal', 'data-controller' => 'leave' } do |f|
            = f.hidden_field :approval_path_id, value: @user.approval_path_id
            .row.mb-3
              = f.label :date, {class: 'col-sm-2 col-form-label'}
              .col-sm-10
                = f.text_field :leave_award_date, :class => 'form-control date-picker award', :placeholder => 'Enter date (ex: yyyy/mm/dd)', :autocomplete => :off, :required => 'true'
            .row.mb-3
              = f.label :hour, {class: 'col-sm-2 control-label'}
              .col-sm-10
                =f.text_field :hour, :class => 'form-control', :type => 'number', :autocomplete => 'off', :required => 'true'
            .row.mb-3
              = f.label 'Note', {class: 'col-sm-2 control-label'}
              .col-sm-10
                = f.text_area :reason, maxlength: '300', class: 'form-control', rows: 7
                %p.help-block 300 characters remaining.
            .row.mb-3
              %label.col-sm-2.control-label
              .col-sm-10
                = f.submit 'Award', class: 'btn btn-primary'
        .modal-footer
          %button.btn.btn-secondary{type: "button", "data-bs-dismiss" => "modal"} Close

  .modal.fade#sp-award-modal{"data-bs-backdrop" => "static", "data-bs-keyboard" => "false", "tabindex" => "-1", "aria-labelledby" => "staticBackdropLabel", "aria-hidden" => "true"}
    .modal-dialog
      .modal-content
        .modal-header
          %h1.modal-title.fs-5#staticBackdropLabel Award special leave
          %button.btn-close{:type => "button", "data-bs-dismiss" => "modal", "aria-label" => "Close"}
        .modal-body
          = form_for @leave, :url => {:controller => 'leaves', :action => 'special_award'},  method: 'POST', html: { class: 'form-horizontal', 'data-controller' => 'leave' } do |f|
            = f.hidden_field :approval_path_id, value: @user.approval_path_id
            .row.mb-3
              = f.label 'Type', { class: 'col-sm-3 control-label' }
              .col-sm-9
                %input{name: "type", type: "radio", value: Leave::PATERNITY, checked: 'checked'} &nbsp;Paternity
                %input{name: "type", type: "radio", value: Leave::MATERNITY} &nbsp;Maternity
            .row.mb-3
              = f.label :start_date, { class: 'col-sm-3 control-label' }
              .col-sm-9
                = f.text_field :start_date, class: 'form-control date-picker sp-award', :placeholder => 'Enter start date (ex: yyyy/mm/dd)', :autocomplete => :off, :required => 'true'
            .row.mb-3
              = f.label :end_date, { class: 'col-sm-3 control-label' }
              .col-sm-9
                = f.text_field :end_date, class: 'form-control date-picker sp-award', :placeholder => 'Enter end date (ex: yyyy/mm/dd)', :autocomplete => :off, :required => 'true'
            .row.mb-3
              = f.label :note, { class: 'col-sm-3 control-label' }
              .col-sm-9
                = f.text_area :reason, maxlength: 300, class: 'form-control', rows: 7
                %p.help-block 300 characters remaining.
            .row.mb-3
              %label.col-sm-3.control-label
              .col-sm-9
                = f.submit 'Submit', :class => 'btn btn-primary'
        .modal-footer
          %button.btn.btn-secondary{type: "button", "data-bs-dismiss" => "modal"} Close  

-if @resignation_error_msg
  = render 'shared/error_popup_modal', locals: {title: 'Warning', msg: @resignation_error_msg}
  :javascript
    $('#error-modal').modal('show');