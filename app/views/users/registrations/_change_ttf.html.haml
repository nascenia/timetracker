%h1= "Change TTF of #{current_user.name}" 
%hr

.row
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: '', method: :put }) do |f|
    = devise_error_messages!
    .card
      .card-header
        TTF change request
      
      .card-body
        .row.mb-3
          = f.label 'New Supervisor/TTF', { class: 'col-sm-2 col-form-label' }
          .col-sm-10
            = f.select :ttf_id, User.active.ttf.map{|u| [u.name, u.id]}, {}, { class: 'form-select' , required: true }
        .row.mb-3
          .col-sm-2
          .col-sm-10
            = f.submit 'Submit',  class: 'btn btn-primary col-sm-2'
            = link_to 'Cancel', employee_path(current_user), class: 'btn btn-danger col-sm-2'
