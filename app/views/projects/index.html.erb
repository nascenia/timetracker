
<table style="width:100%" id="projects-list-table">
    <h3>Projects</h3>
    <% if @is_active %>
        <%= link_to 'Inactive Projects', projects_path(is_active: false) %>
    <%else %>
        <%= link_to 'Active Projects', projects_path(is_active: true) %>
    <% end %>
<!--    <tfoot class="col-search">-->
