- time_period   = params[:commit] == 'Search' ? params[:project][:time_period] : 1
- start_date    = params[:commit] == 'Search' ? params[:project][:start_date] : ''
- end_date      = params[:commit] == 'Search' ? params[:project][:end_date] : ''

- time_periods = [['Today', '0'], ['Last 7 days', '7'], ['Last 14 days', '14'], ['Last 30 days', '30'], ['Last 90 days', '90'], ['Last 6 months', '180'], ['Last 1 year', '365']]

= form_for(:project, url: summary_projects_path, method: :get, html: { class: 'row mb-3', 'data-controller' => 'projectsummary' }) do |f|
  .col-sm-2
    = f.label 'Time period'
    = f.select :time_period, options_for_select(time_periods, time_period), { include_blank: 'select'}, class: 'form-select'
  .col-sm-2
    = f.label :start_date
    = f.text_field :start_date, value: start_date, class: 'form-control date-picker', data: { date_format: "yyyy/mm/dd" }
  .col-sm-2
    = f.label :end_date
    = f.text_field :end_date, value: end_date, class: 'form-control date-picker', data: { date_format: "yyyy/mm/dd" }
  .col-sm-2
    %br
    = f.submit 'Search', class: 'btn btn-info btn-block'
