%html{:lang => "en"}
  %head
    %title Timetracker | Rails7

    %meta{:charset => "utf-8"}
    %meta{:http => {:equiv => "X-UA-Compatible"}, :content => "IE=edge"}
    %meta{:name => "viewport", :content => "width=device-width,initial-scale=1"}
    %meta{:name => "description", :content => ""}
    %meta{:name => "author", :content => ""}

    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags

  %body
    %nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      %div.container
        %a{:class => 'navbar-brand', :href => "/"}
          = image_tag 'logo.png', style: 'height: 35px; margin-top: 0px;'
        %button.navbar-toggler{:type => "button", 'data-bs-toggle' => "collapse", 'data-bs-target' => "#navbarCollapse", 'aria-controls' => "navbarCollapse", 'aria-expanded' => "false", 'aria-label' => "Toggle navigation"}
          %span.navbar-toggler-icon
        
        %div.collapse.navbar-collapse#navbarCollapse
          =# render 'layouts/shared/navbar'
          %ul.navbar-nav.me-auto.mb-2.mb-md-0
            %li.nav-item
              %a.nav-link.active{ 'aria-current' => "page", href: "#"} Home
            %li.nav-item
              %a.nav-link{ href: "#" } Link1
            %li.nav-item
              %a.nav-link{ href: "#" } Link2

    %main.container
      %div.flash-message
        - if notice 
          .alert.alert-danger{role: "alert"}
            A simple danger alert—check it out! 
            = notice
        - elsif alert
        .alert.alert-info{role: "alert"}
          A simple info alert—check it out!
          = alert
  
      .content
        = yield
        
    = render 'layouts/shared/footer'
    
