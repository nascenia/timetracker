%ul.list-group
  %li.list-group-item.bg-secondary.fs-5 Leave management
  %li.list-group-item{:class => current_page?(leave_tracker_path(current_user)) ? 'bg-light' : ''}
    = link_to 'My leave', leave_tracker_path(current_user)
  %li.list-group-item{:class => current_page?(new_leave_path) ? 'bg-light' : ''}
    = link_to 'Apply leave', new_leave_path
  - if has_co_worker? || current_user.has_admin_privilege?
    %li.list-group-item{:class => current_page?(team_user_path(current_user)) ? 'bg-light' : ''}
      = link_to 'Employees leaves', team_user_path(current_user)
  - if has_owned_paths? || current_user.has_admin_privilege?
    %li.list-group-item{:class => current_page?(leaves_path) ? 'bg-light' : ''}
      = link_to 'Pending leaves', leaves_path
  - if current_user.has_admin_privilege?
    %li.list-group-item{:class => current_page?(approval_chains_path) ? 'bg-light' : ''}
      = link_to 'Approval paths', approval_chains_path
  - if current_user.has_admin_privilege?
    %li.list-group-item{:class => current_page?(weekends_path) ? 'bg-light' : ''}
      = link_to 'Weekend scheme', weekends_path
  - if current_user.has_admin_privilege?
    %li.list-group-item{:class => current_page?(holiday_schemes_path) ? 'bg-light' : ''}
      = link_to 'Holiday scheme', holiday_schemes_path
  - if current_user.has_admin_privilege?
    %li.list-group-item{:class => current_page?(super_admin_leaves_path) ? 'bg-light' : ''}
      = link_to 'All leaves', super_admin_leaves_path
    