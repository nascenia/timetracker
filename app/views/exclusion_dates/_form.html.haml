- content_for :modal_title do
  Exclusion dates for #{@context.name}

- content_for :modal_body do
  = form_for [@context, @context.exclusion_dates.build] do |f|
    .form-group
      = f.text_field :date, class: 'form-control date-picker', placeholder: 'Enter date (ex: dd/mm/yyyy)'

    .form-group
      = f.submit 'Submit', class: 'form-control btn btn-primary'
